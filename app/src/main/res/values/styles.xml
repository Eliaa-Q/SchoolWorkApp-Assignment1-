<resources>
    <!-- Defining background color -->
    <color name="background_color">#EDE4DDBB</color>

    <!-- Style for the purple and big text (HEADING) -->
    <style name="PurpleBigTextStyle">
        <item name="android:textColor">#6750A3</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Style for the smaller black text (NORMAL TEXT) -->
    <style name="SmallBlackTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for centralized question text -->
    <style name="QuestionTextStyle">
        <item name="android:textColor">#374933</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for white background -->
    <style name="WhiteBackgroundStyle">
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
